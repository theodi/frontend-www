<% article_meta @publication %>

<% content_for :title do %>
	<a href="<%= lunchtime_lectures_section_path %>">Lunchtime Lectures</a>
<% end %>

<div class="<%= upcoming_event? && @publication.livestream == "true" ? 'article-main' : 'article-full' %>">
	<article class="article-body">
    <%= render :partial => 'content/event', :locals => { :publication => @publication } %>
	</article>
</div>

<% if upcoming_event? && @publication.livestream == "true" %>
  <aside class="article-sidebar">
    <h3>Live stream</h3>
    <p>Begins at <%= parse_to_local_time(@publication.start_date).strftime("%A %d %B %Y at %l:%M%P") %></p>
    <iframe src="http://mixlr.com/ukodi/embed" width="100%" height="180px" scrolling="no" frameborder="no" marginheight="0" marginwidth="0"></iframe>
  </div>
<% end %>

<div class="clearfix"></div>

<div class="row">

	<ul class="grid effect-2 listing" id="grid2">
		<% @publication.related_links.each do |artefact| %>
			<li class="home-module listing">
				<div class="module module-light module-highlight-1 module-colour-<%= (artefact[:url].length % 12) + 1 %>">
					<a href="<%= artefact[:url] %>" target="_top">
						<h1 class="module-heading"><%= artefact[:title] %></h1>
						<p class="category">Lunchtime Lecture</p>
					</a>
				</div>
			</li>
		<% end %>
	</ul>

</div>
